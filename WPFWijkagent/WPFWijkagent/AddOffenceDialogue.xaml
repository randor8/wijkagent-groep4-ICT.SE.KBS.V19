        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="delict toevoegen" Height="302" Width="478">
    <Grid>
        <Label Content="Categorie:" HorizontalAlignment="Left" Margin="80,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Omschrijving:" HorizontalAlignment="Left" Margin="81,96,0,0" VerticalAlignment="Top"/>
        <Label Content="Datum/tijd:" HorizontalAlignment="Left" Margin="81,193,0,0" VerticalAlignment="Top"/>
        <Button x:Name="wpfBTNToevoegen" Content="toevoegen" HorizontalAlignment="Left" Margin="309,235,0,0" VerticalAlignment="Top" Click="wpfBTNToevoegen_Click" Width="78"/>
        <ComboBox x:Name="wpfCBCategorie" HorizontalAlignment="Left" Margin="186,48,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="wpfTBOmschrijving" HorizontalAlignment="Left" Margin="186,94,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" Height="64"/>
