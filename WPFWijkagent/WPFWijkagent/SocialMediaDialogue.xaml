<Window x:Class="WijkagentWPF.SocialMediaDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WijkagentWPF"
        mc:Ignorable="d"
        Title="SocialMediaDialogue" Height="450" Width="800">
    <ScrollViewer>
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="List"/>
            </Grid.ColumnDefinitions>
            <TextBox Margin="10" TextWrapping="WrapWithOverflow" x:Name="SocialMediaLabel" Grid.Column="0"/>
        </Grid>
    </ScrollViewer>
</Window>
