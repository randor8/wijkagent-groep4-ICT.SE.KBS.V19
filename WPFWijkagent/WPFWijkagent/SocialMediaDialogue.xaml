<Window x:Class="WijkagentWPF.SocialMediaDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WijkagentWPF"
        mc:Ignorable="d"
        Title="Media Berichten" Height="450" Width="800">

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" x:Name="Button"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBox Margin="10,10,10,10" TextWrapping="WrapWithOverflow" x:Name="SocialMediaLabel" Grid.Column="0" IsReadOnly="True"/>
        </ScrollViewer>
        <Button x:Name="CloseWindowButton" Content="Sluiten" Grid.Row="1" HorizontalAlignment="Right" Width="100" Height="30" Margin="10" Click="CloseWindowButton_Click"/>
    </Grid>
</Window>
