<Window x:Class="WijkagentWPF.ContactWitnessDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WijkagentWPF"
        mc:Ignorable="d"
        Title="ContactWitnessDialogue" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InputLabel" Grid.Row="1" Width="685" Height="50" Margin="10,11,0,11"  
               HorizontalAlignment="Left" Background="Beige" BorderBrush="Black" />
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="ChatCanvas" Background="Azure" Grid.Row="0" Height="400"/>
        </ScrollViewer>
        
        <Button x:Name="SendButton" Content="Versturen" HorizontalAlignment="Right" Margin="8"
                Grid.Row="1" Width="80" Height="50" Click="SendButton_Click"/>
    </Grid>
</Window>
